!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ChatSpace
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .flash-box

      .wrapper

        .chat-side

          .side-header

            .side-header__box
              %p.side-header__box__user-name
              %ul.side-header__box__menu
                %li.side-header__box__menu__edit-user
                %li.side-header__box__menu__new-group

          .groups

        .chat-main

          .main-header
            .main-header__left-box
              %h2.main-header__left-box__curent-group a
              %ul.main-header__left-box__member-list Member:
              %li.main-header__left-box__member-list__member yamamoto

            .main-header__edit-btn Edit

          .messages

          .form
            %form.new_message
              .input-box
                %label.input-box__image


    = yield
