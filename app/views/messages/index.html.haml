.wrapper

  .chat-side

    .side-header

      .side-header__box
        %p.side-header__box__user-name
          = current_user.name
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            = link_to new_group_path do
              = fa_icon 'edit', class: 'icon'
          %li.side-header__box__menu__edit-user
            = link_to edit_user_path(current_user) do
              = fa_icon 'cog', class: 'icon'

    .groups
      =render partial: "group"

  .chat-main

    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group a
        %ul.main-header__left-box__member-list Member :
        %li.main-header__left-box__member-list__member yamamoto

      .main-header__edit-btn
        = link_to "Edit", edit_group_path(current_user), class: 'btn'

    .messages
      =render partial: "message", collection: @messages

    .form
      .form__new-message
        = form_for [@group, @message] do |f|
          .box
            = f.text_field :body, class: 'box__text', placeholder: "type a message"
            = f.label :image, class: 'box__image' do
              = fa_icon 'image', class: 'icon'
              = f.file_field :image, id: 'message_image'
          = f.submit 'Send', class: 'form__send'
